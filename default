#Example:

server {
host 127.0.0.1
listen 5000


location / {
  root ./www/
  allow_method GET POST
  auto_index on
  cgi on
  cgi_path php /bin/php-cgi
  cgi_path py /bin/python3
}

location /upload/ {
  root ./www/upload/
  allow_method GET POST
  auto_index on
  uploade on /
}

location /test {
 return http://google.com
  root /
}
}

server {
host 127.0.0.1
listen 8080 8083 8082
server_name 1337.com localhost:8082
# max_body_size 10000000


location / {
  index index.php index.html
  root ./www/
  allow_method GET DELETE
  auto_index on
  uploade on //
  cgi on
  # cgi_path php /bin/php-cgi
}
location /test {
 return http://google.com
  root /
}
}

