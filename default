#Example:
server {
  host 127.0.0.1
  listen 3000
  server_name 1337.com localhost:8082
  max_body_size 1000000000000


  location / {
    #index index.php index.html
    root ./www/
    allow_method GET POST
    auto_index on
    uplode on /
    cgi on
    # cgi_path .php /php-cgi
  }
  location /t {
  return http://42.fr
    root ./www/
  }

  location /upload {
    root ./www/realtest/upload/
    allow_method GET POST
    auto_index on
    uplode on /
    cgi on
    cgi_path php /bin/php-cgi
    cgi_path py /bin/python3
  }

  location /test {
    #index index.php index.html
    root ./www/realtest
    allow_method GET
    auto_index on
    cgi on
    cgi_path php /bin/php-cgi
    cgi_path py /bin/python3
  }
}






