server {
host 127.0.0.1
listen 8080
max_body_size 100

location / {
  # index index.php
  root ./
  allow_method GET
  auto_index on
  # cgi on
  # cgi_path py /usr/bin/python
}
location /put_test/ {
  # index index.php
  root ./
  allow_method POST
  uploade on /www/
  auto_index on
  cgi on
  cgi_path bla ./ubuntu_cgi_tester
}
location /post_body {
  # index index.php
  root ./
  allow_method POST
  uploade on /www/
  auto_index on
  # cgi on
  # cgi_path bla ./cgi_tester
}
location /directory/ {
  index youpi.bad_extension
  root ./YoupiBanane/
  allow_method GET
  # uploade on /www/
  auto_index on
  # cgi on
  # cgi_path bla ./cgi_tester
}
}

server {
host 127.0.0.1
listen 8081 
max_body_size 10000000000

location / {
  root ./www/
  allow_method GET POST
  auto_index on
  uploade on /upload/
  # cgi on
  # cgi_path php /bin/php-cgi
  # cgi_path py /bin/python3
  
}

