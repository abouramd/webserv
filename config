#Example:

server {
host 0.0.0.0
listen 9999
max_body_size 10

  location / {
  # index index.php
  root ./
  allow_method GET POST
  auto_index on
  uploade on /
  cgi on
  cgi_path py /bin/python3
  }
}


# simple-php-website

server {
host 0.0.0.0
listen 8080

location / {
  index index.php
  root ./www/simple-php-website/
  allow_method GET
  cgi on
  cgi_path php /bin/php-cgi
  }
}


# simple-php-system

server {
host 0.0.0.0
listen 8090

location / {
  index index.php
  root ./www/simple_php_system/
  allow_method GET POST
  cgi on
  cgi_path php /bin/php-cgi
  }
}

# cookies test

server {
host 0.0.0.0
listen 8070

location / {
  root ./www/cgi-cookies/
  allow_method GET
  auto_index on
  }

location /p/ {
  root ./www/cgi-cookies/php/
  allow_method GET POST
  auto_index on
  cgi on
  cgi_path php /bin/php-cgi
  }

location /l/ {
  root ./www/cgi-cookies/perl/
  allow_method GET POST
  auto_index on
  cgi on
  cgi_path pl /bin/perl
  }

location /r/ {
  root ./www/cgi-cookies/ruby/
  allow_method GET POST
  auto_index on
  cgi on
  cgi_path rb /bin/ruby
  }

location /n/ {
  root ./www/cgi-cookies/python/
  allow_method GET POST
  auto_index on
  cgi on
  cgi_path py /bin/python3
}




}



# html web site topic-listing
server {
host 0.0.0.0
listen 8060

location / {
  index index.html
  root ./www/topic-listing/
  allow_method GET POST
  auto_index on
  uploade on /
  # cgi on
  # cgi_path php /bin/php-cgi
  # cgi_path py /bin/python3
  
}

}

# php web site food
server {
host 0.0.0.0
listen 8040
max_body_size 10000000

location / {
  index home.php
  root ./www/food-website-php/
  allow_method GET POST
  auto_index on
  uploade on /uploaded_img/
  cgi on
  cgi_path php /bin/php-cgi
  # cgi_path py /bin/python3
  
}

}

